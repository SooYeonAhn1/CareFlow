{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/shared-types": ["packages/shared-types"],
      "@app/utils": ["packages/utils"]
    }
  },
  
  "include": [
    "apps/**/*", 
    "packages/**/*", 
    "server/**/*"
  ]
}
